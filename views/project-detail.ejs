<div class="min-h-screen py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Project Header -->
        <div class="mb-12">
            <a href="/portfolio" class="inline-flex items-center text-blue-400 hover:text-blue-500 mb-8">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
                Portfolyoya Dön
            </a>
            <h1 class="text-4xl font-bold text-white mb-4"><%= project.title %></h1>
            <div class="flex items-center space-x-4 mb-8">
                <span class="bg-blue-600 text-white px-4 py-1 rounded-full text-sm"><%= project.type %></span>
                <a href="<%= project.githubLink %>" target="_blank" class="inline-flex items-center text-gray-300 hover:text-white">
                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0C5.37 0 0 5.37 0 12c0 5.3 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 21.795 24 17.295 24 12c0-6.63-5.37-12-12-12"/>
                    </svg>
                    GitHub'da İncele
                </a>
            </div>
        </div>

        <!-- Project Content -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <!-- Project Image -->
            <div class="relative h-96 rounded-lg overflow-hidden shadow-xl">
                <img src="<%= project.image %>" alt="<%= project.title %>" class="absolute inset-0 w-full h-full object-cover">
            </div>

            <!-- Project Info -->
            <div>
                <div class="prose prose-lg text-gray-300 mb-8">
                    <p><%= project.description %></p>
                </div>

                <!-- Technologies -->
                <div class="mb-8">
                    <h3 class="text-xl font-semibold text-white mb-4">Kullanılan Teknolojiler</h3>
                    <div class="flex flex-wrap gap-2">
                        <% project.technologies.forEach(function(tech) { %>
                            <span class="px-3 py-1 bg-gray-700 text-gray-300 rounded-full text-sm">
                                <%= tech %>
                            </span>
                        <% }); %>
                    </div>
                </div>

                <!-- Project Category -->
                <div class="mb-8">
                    <h3 class="text-xl font-semibold text-white mb-4">Kategori</h3>
                    <span class="px-4 py-2 bg-gray-700 text-gray-300 rounded-lg">
                        <%= project.category === 'mobile' ? 'Mobil Uygulama' :
                            project.category === 'web' ? 'Web Uygulaması' :
                            'Masaüstü Uygulaması' %>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div> 