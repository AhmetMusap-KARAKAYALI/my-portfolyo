<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Portfolyom</title>
    <link href="/css/style.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/typewriter-effect@latest/dist/core.js"></script>
</head>
<body class="bg-gray-900 text-white">
    <!-- Navigation -->
    <nav class="bg-gray-800 fixed w-full z-10">
        <div class="max-w-7xl mx-auto px-4">
            <div class="flex justify-between h-16">
                <div class="flex">
                    <div class="flex-shrink-0 flex items-center">
                        <a href="/" class="text-xl font-bold text-white">Portfolyom</a>
                    </div>
                </div>
                <div class="hidden md:flex items-center space-x-4">
                    <a href="/" class="<%= page === 'home' ? 'text-blue-400' : 'text-gray-300 hover:text-white' %> px-3 py-2 rounded-md text-sm font-medium">Ana Sayfa</a>
                    <a href="/hakkimda" class="<%= page === 'about' ? 'text-blue-400' : 'text-gray-300 hover:text-white' %> px-3 py-2 rounded-md text-sm font-medium">Hakkımda</a>
                    <a href="/yetenekler" class="<%= page === 'skills' ? 'text-blue-400' : 'text-gray-300 hover:text-white' %> px-3 py-2 rounded-md text-sm font-medium">Yeteneklerim</a>
                    <a href="/portfolyo" class="<%= page === 'portfolio' ? 'text-blue-400' : 'text-gray-300 hover:text-white' %> px-3 py-2 rounded-md text-sm font-medium">Portfolyo</a>
                    <a href="/iletisim" class="<%= page === 'contact' ? 'text-blue-400' : 'text-gray-300 hover:text-white' %> px-3 py-2 rounded-md text-sm font-medium">İletişim</a>
                </div>
                <!-- Mobile menu button -->
                <div class="md:hidden flex items-center">
                    <button type="button" class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white">
                        <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
        <!-- Mobile menu -->
        <div class="mobile-menu hidden md:hidden">
            <div class="px-2 pt-2 pb-3 space-y-1">
                <a href="/" class="<%= page === 'home' ? 'bg-gray-900 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %> block px-3 py-2 rounded-md text-base font-medium">Ana Sayfa</a>
                <a href="/hakkimda" class="<%= page === 'about' ? 'bg-gray-900 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %> block px-3 py-2 rounded-md text-base font-medium">Hakkımda</a>
                <a href="/yetenekler" class="<%= page === 'skills' ? 'bg-gray-900 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %> block px-3 py-2 rounded-md text-base font-medium">Yeteneklerim</a>
                <a href="/portfolyo" class="<%= page === 'portfolio' ? 'bg-gray-900 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %> block px-3 py-2 rounded-md text-base font-medium">Portfolyo</a>
                <a href="/iletisim" class="<%= page === 'contact' ? 'bg-gray-900 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %> block px-3 py-2 rounded-md text-base font-medium">İletişim</a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="pt-16">
        <%- body %>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 mt-12">
        <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
            <div class="text-center text-gray-400">
                <p>&copy; 2024 Portfolyom. Tüm hakları saklıdır.</p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script>
        // Mobile menu toggle
        document.querySelector('.mobile-menu-button').addEventListener('click', function() {
            document.querySelector('.mobile-menu').classList.toggle('hidden');
        });

        // Typewriter efekti
        if (document.getElementById('typed-text')) {
            new Typewriter('#typed-text', {
                strings: ['Ahmet Musap'],
                autoStart: true,
                loop: true,
                delay: 150,
                deleteSpeed: 150,
                pauseFor: 2000
            });
        }
    </script>
</body>
</html> 