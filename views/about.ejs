<div class="min-h-screen py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- About Section -->
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-white mb-4">Hakkımda</h1>
            <p class="text-xl text-gray-300">Kendimi ve hedeflerimi tanıtayım</p>
        </div>

        <!-- Personal Info -->
        <div class="bg-gray-800 rounded-lg p-8 mb-12">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div class="flex justify-center items-center">
                    <div class="w-48 h-48 md:w-64 md:h-64 overflow-hidden rounded-full border-4 border-blue-500 shadow-xl transform hover:scale-105 transition-all duration-300 hover:border-blue-400">
                        <img src="/images/musap.JPG" alt="Profil Fotoğrafı" class="w-full h-full object-cover hover:rotate-3 transition-all duration-500">
                    </div>
                </div>
                <div>
                    <h2 class="text-2xl font-semibold text-white mb-4">Kişisel Bilgiler</h2>
                    <p class="text-gray-300 mb-6">
                        <%= personalInfo.description %>
                    </p>
                </div>
            </div>
        </div>

        <!-- Education -->
        <div class="bg-gray-800 rounded-lg p-8 mb-12 transform hover:scale-[1.02] transition-all duration-300">
            <h2 class="text-2xl font-semibold text-white mb-6">Eğitim</h2>
            <div class="space-y-6">
                <% personalInfo.education.forEach(function(edu) { %>
                <div class="border-l-4 border-blue-500 pl-4 hover:border-blue-400 transition-colors duration-300">
                    <h3 class="text-xl font-medium text-white"><%= edu.school %></h3>
                    <p class="text-gray-300 mt-1"><%= edu.degree %></p>
                    <p class="text-gray-400 mt-1"><%= edu.year %></p>
                </div>
                <% }); %>
            </div>
        </div>

        <!-- Hobbies -->
        <div class="bg-gray-800 rounded-lg p-8 transform hover:scale-[1.02] transition-all duration-300">
            <h2 class="text-2xl font-semibold text-white mb-6">Hobilerim</h2>
            <ul class="space-y-4">
                <li class="flex items-center text-gray-300">
                    <svg class="w-5 h-5 text-blue-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Bisiklet Sürme
                </li>
                <li class="flex items-center text-gray-300">
                    <svg class="w-5 h-5 text-blue-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Fitness
                </li>
                <li class="flex items-center text-gray-300">
                    <svg class="w-5 h-5 text-blue-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Enstrüman Çalma
                </li>
                <li class="flex items-center text-gray-300">
                    <svg class="w-5 h-5 text-blue-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Yüzme
                </li>
            </ul>
        </div>
    </div>
</div> 