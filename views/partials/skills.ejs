<section class="py-16 bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-white mb-4">Yeteneklerim</h2>
            <p class="text-xl text-gray-300">Uzmanlaştığım teknolojiler ve araçlar</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% personalInfo.skills.forEach(function(skillCategory) { %>
                <div class="bg-gray-800 rounded-lg p-8 transform hover:scale-105 transition-all duration-300">
                    <h3 class="text-2xl font-semibold text-white mb-6"><%= skillCategory.category %></h3>
                    <div class="space-y-4">
                        <% skillCategory.items.forEach(function(skill) { %>
                            <div class="skill-item">
                                <div class="flex justify-between items-center mb-2">
                                    <span class="text-white"><%= skill %></span>
                                    <div class="w-2 h-2 bg-blue-500 rounded-full animate-pulse"></div>
                                </div>
                                <div class="h-2 bg-gray-700 rounded-full overflow-hidden">
                                    <div class="skill-progress h-full bg-blue-500 rounded-full" style="width: 0%"></div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const progressBars = document.querySelectorAll('.skill-progress');
        const randomProgress = () => Math.floor(Math.random() * (95 - 75 + 1)) + 75;

        // Animate progress bars on scroll
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const progress = entry.target;
                    progress.style.width = `${randomProgress()}%`;
                    progress.style.transition = 'width 1.5s ease-in-out';
                }
            });
        }, { threshold: 0.1 });

        progressBars.forEach(bar => observer.observe(bar));
    });
</script>

<style>
    .skill-progress {
        transition: width 1.5s ease-in-out;
    }
</style> 